section.page.directory
  table.directory.table.table-striped
    thead
      tr
        th.name Name
        th.size Size
    tbody
      - directory.each do |name, entry|
        tr
          td.name
            = link_to name, browse_version_path(version, File.join(*[path.presence, name].compact))
            =< content_tag :span, "/", class: "text-muted" if entry.is_a? Hash
          td.size = number_to_human_size entry.size if entry.respond_to? :size
